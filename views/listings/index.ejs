<style>
  #filters {
    display: flex;
    flex-wrap: nowrap; /* Prevent icons from wrapping to new lines on small screens */
    align-items: center;
    overflow-x: auto; /* Allow horizontal scrolling on mobile */
    padding: 0.5rem 0;
    align-items: center;
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  #filters::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  #filters {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
    flex: 0 0 auto; /* Keep icons from shrinking */
    transition: 0.2s ease-in-out;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    
  }

  .filter i {
    font-size: 1.2rem;
  }

  .filter p {
    font-size: 0.8rem;
  }

  /* MEDIA QUERIES */

  /* For Tablets (max-width: 992px) */
  @media (max-width: 992px) {
    .filter {
      margin-right: 1.5rem;
    }
  }

  /* For Small Mobile Devices (max-width: 768px) */
  @media (max-width: 768px) {
    #filters {
      margin-top: 0.5rem;
    }
    .filter {
      margin-right: 1rem;
    }
    .filter p {
      font-size: 0.7rem;
    }
    .filter i {
      font-size: 1.1rem;
    }

    .tax-info{
      display: none;
    }
    .tax-toggle {
      margin-left: 1rem; /* Adjust spacing on small screens */
      padding: 0.8rem;
    }
    .form-check-label {
      font-size: 0.8rem;
    }
  }
/* Tax Toggle Style for all screens */
  .tax-toggle {
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: auto; /* Pushes the toggle to the right side of the bar */
    display: flex;
    align-items: center;
    background-color: #fff;
    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
  }

</style>
